<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/centerbox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#3F51B5" />

    <TextView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/centerbox"
        android:layout_toLeftOf="@+id/centerbox"
        android:background="#673AB7" />

    <TextView

        android:layout_width="100dp"
        android:layout_height="100dp"
     android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/centerbox"
        android:background="#2196F3" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/centerbox"
        android:background="#E91E63" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/centerbox"
        android:layout_above="@+id/centerbox"
        android:background="#9C27B0" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/centerbox"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@+id/centerbox"
        android:background="#F44336" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
      android:layout_below="@+id/centerbox"
        android:background="#00BCD4" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/centerbox"
        android:layout_toStartOf="@+id/centerbox"
        android:background="#009688" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/centerbox"
        android:layout_toEndOf="@+id/centerbox"
        android:background="#8BC34A" />


</RelativeLayout>